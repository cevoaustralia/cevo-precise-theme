<!doctype html>
<html>
  <head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, user-scalable=no, minimal-ui">

  <title>{{profile.name}}</title>

  <link href="https:///maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css" rel="stylesheet">

  <style type="text/css">
    {{{css}}}
  </style>
  </head>
  <body>
    <div class="container-fluid">

      <header class="row">
        <h2 class="name">{{profile.about.name}}</h2>

        <p class="title">{{profile.about.title}}</p>
        {{#if profile.about.passion }}
          <p class="passion well well-sm">{{profile.about.passion}}</p>
        {{/if}}
      </header>

      <div class="row">
        <div class="col-md-offset-2 col-md-3">
          <div class="photo">
            <img width="300" height="300" src="{{profile.about.photo_url}}">
          </div>
        </div>
        <div class="col-md-5 bio">
          {{#if profile.about.bio }}
          <div class="bio">
            <p>{{profile.about.bio}}</p>
          </div>
          {{/if}}
        </div>
      </div>

      <div class="row">
        <div class="col-md-offset-2 col-md-9">
          <div class="skills">
            <ul class="list-inline well well-sm">
              {{#each profile.skills}}
                <li>{{this.name}}</li>
              {{/each}}
            </ul>
          </div>

          <hr>
        </div>
      </div>

      {{#if profile.experiences}}
      <div class="row">
        <div class="col-md-offset-2 col-md-8">
          <section class="experiences">
            <h3>Selected experience</h3>

            {{#each profile.experiences}}
              <div class="row">
                <div class="col-md-offset-1 col-md-10">
                  <h4><p>{{this.place}}</p></h4>
                  <h5>{{this.role}}</h5>
                  <p>{{this.period}}</p>
                  <span>{{{md this.description}}}</span>
                </div>
              </div>

              <hr class="divider">
            {{/each}}
          </section>
        </div>
      </div>
      {{/if}}

      {{#if profile.education_and_trainings}}
      <div class="row">
        <div class="col-md-offset-2 col-md-8">
          <section class="education">
            <h3>Education and Training</h3>

            {{#each profile.education_and_trainings}}
              <div class="row">
                <div class="col-md-offset-1 col-md-10">
                  <h4><p>{{this.place}}</p></h4>
                  <h5>{{this.period}}</h5>
                  <span><p>{{this.description}}</p></span>
                </div>
              </div>

              <hr class="divider">
            {{/each}}
          </section>
        </div>
      </div>
      {{/if}}

      {{#if profile.presence}}
      <div class="row">
        <div class="col-md-offset-2 col-md-8">
          <section class="links">
            <h3>Links</h3>

              <div class="row">
                <div class="col-md-offset-1 col-md-10">
                  {{#each profile.presence}}
                    <h4><a href="{{this.url}}">{{this.type}}</a></h4>
                  {{/each}}
                </div>
              </div>
          </section>
        </div>
      </div>
      {{/if}}
    </div>
  </body>
</html>
